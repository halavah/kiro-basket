# ================================================
# 开发环境配置
# ================================================
NODE_ENV=development
PORT=3000

# ================================================
# MySQL 数据库配置 (本地开发)
# ================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_DATABASE=kiro_basket

# ================================================
# MongoDB 数据库配置 (本地开发)
# ================================================
MONGODB_URI=mongodb://localhost:27017/kiro_basket_logs

# ================================================
# JWT 配置 (开发环境 - 使用固定密钥便于调试)
# ================================================
JWT_SECRET=dev-secret-key-for-development-only
JWT_EXPIRES_IN=7d

# ================================================
# 其他配置
# ================================================
# 上传文件大小限制（MB）
MAX_FILE_SIZE=10

# API 前缀
API_PREFIX=/api

# ================================================
# 开发环境专用配置
# ================================================
# 是否启用详细日志
DEBUG=true

# 是否启用 CORS（开发环境允许所有来源）
CORS_ORIGIN=*

# ================================================
# 数据库初始化配置
# ================================================
# 是否强制重新初始化数据库（开发环境建议 true）
# true: 每次启动删除所有表并重建（所有数据丢失）
# false: 智能检查，仅在必要时初始化（保留现有数据）
FORCE_DB_REINIT=true
